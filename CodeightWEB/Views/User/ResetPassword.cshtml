@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>BCM</title>

    <link rel="stylesheet" href="webfonts/fonts.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/content/theme/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/content/theme/css/adminlte.min.css">
    <!-- Custom style -->
    <link rel="stylesheet" href="~/content/theme/css/main.css">

    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <style>
        /*eye icon on password field*/
        .field-icon {
            float: right;
            margin-right: 8px;
            margin-top: -29px;
            position: relative;
            z-index: 2;
            cursor: pointer;
        }

        .container {
            padding-top: 50px;
            margin: auto;
        }
    </style>

</head>

<body class="hold-transition sidebar-mini">
    <div class="container h-100">
        <div class="row h-100 justify-content-center">
            <div class="col-lg-8 col-sm-12 my-auto">
                <div class="sign_logo">
                    <img src="~/content/theme/img/logo.png">
                </div>
                <div class="sign_container">
                    <div class="row">
                        <div class="col-lg-12 pl-4 pr-4">
                            <div class="form-box">
                                <h1>Reset Your Password</h1>
                                <form action="~/User/UpdatePassword" method="post">
                                    <input type="hidden" value="@ViewBag.Link" name="Link" />

                                    <div class="form-group">
                                        <input type="password" value="" class="form-control password" id="pwd" name="NewPass" required="" placeholder="New password">
                                        <span toggle="#pwd" class="fa fa-lg fa-eye field-icon toggle-password"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" value="" class="form-control password" id="cnfrmpwd" name="ConfirmPass" required="" placeholder="Confirm password">
                                        <span toggle="#cnfrmpwd" class="fa fa-lg fa-eye field-icon toggle-password"></span>
                                    </div>
                                    <div class="form-group">
                                        <p style="color:red">@ViewBag.Error</p>
                                    </div>

                                    <div class="button-box mt-5">
                                        <input class="btn full-btn text-uppercase" type="submit" name="Submit" value="Submit" />
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        $(".toggle-password").click(function () {
            debugger;
            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });

        //$(".toggle-password").click(function () {
